<div class='container my-5 py-4'>
  <div class="row">
    <div class='col-md-10 mx-auto'>
      <div class="row">
        <div class='col-12 bg-secondary pt-2'>
          <h5 class="text-white">Admin Dashboard</h5>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-2 bg-dark py-4'>
          <div class='w-100 my-3'>
             <a href='#' class='btn btn-outline-secondary form-control'>
               Pages
             </a>
          </div>
          <div class='w-100 my-3'>
             <a href='#' class='btn btn-outline-secondary form-control'>
               Link
             </a>
          </div>
          <div class='w-100 my-3'>
             <a href='#' class='btn btn-outline-secondary form-control'>
               Link
             </a>
          </div>
          <div class='w-100 my-3'>
             <a href='#' class='btn btn-outline-secondary form-control'>
               Link
             </a>
          </div>
        </div>
        <div class='col-md-10 border border-secondary py-4' style='min-height: 550px;'>
          <div class='row'>
            <div class='col-12'>
              <%= link_to '+ New Page', new_admin_page_path, class: 'btn btn-sm btn-info float-right mb-2', data: { turbolinks: false } %>
            </div>
          </div>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @pages.each do |page| %>
                <tr>
                  <th scope="row"><%= page.id %></th>
                  <td><%= page.title %></td>
                  <td><%= page.published_at %></td>
                  <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                      <button type="button" class="btn btn-secondary btn-sm">View</button>
                      <button type="button" class="btn btn-secondary btn-sm">Edit</button>
                      <button type="button" class="btn btn-secondary btn-sm">Delete</button>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
        <div class='col-12 px-0'>
          <span class='float-right'>
            <small>project inormoc | `https://github.com/projgils/comroni`</small>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>